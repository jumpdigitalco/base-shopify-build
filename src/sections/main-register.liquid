<div class="account-wrapper">
    <div class="account account-register">
        <div class="account-header">
            <a class="title" href="{{ routes.account_login_url }}">{{ 'customer.login.title' | t }}</a>
            <h1 class="title active">{{ 'customer.register.title' | t }}</h1>
        </div>
        <div class="account-body">
            <div id="CustomerRegisterForm">
            {% form 'create_customer' %}
                <div class="fieldset">
                    <div class="field col">
                        <div class="input-wrapper">
                            <label for="FirstName" >{{ 'customer.register.first_name' | t }}</label>
                            <input type="text"
                                name="customer[first_name]"
                                id="FirstName"
                                class="required" 
                                placeholder="{{ 'customer.register.first_name' | t }}"
                                autofocus
                                {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
                        </div>
                    </div>
                    <div class="field col">
                        <div class="input-wrapper">
                            <label for="LastName" >{{ 'customer.register.last_name' | t }}</label>
                            <input type="text"
                                name="customer[last_name]"
                                id="LastName"
                                class="required" 
                                placeholder="{{ 'customer.register.last_name' | t }}"
                                {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
                        </div>
                    </div>
                </div>
                <div class="fieldset">
                    <div class="field">
                        <div class="input-wrapper {% if form.errors contains 'email' %}input-error{% endif %}">
                            <label for="Email" >{{ 'customer.register.email' | t }}</label>
                            <input type="email"
                                name="customer[email]"
                                id="CreateEmail"
                                class="required {% if form.errors contains 'email' %}input-error{% endif %}"
                                placeholder="{{ 'customer.register.email' | t }}"
                                value="{% if form.email %}{{ form.email }}{% endif %}"
                                spellcheck="false"
                                autocomplete="off"
                                autocapitalize="off">
                        </div>
                    </div>
                    <div class="field">
                        <div class="input-wrapper {% if form.errors contains 'password' %}input-error{% endif %}">
                            <label for="CreatePassword" >{{ 'customer.register.password' | t }}</label>
                            <input type="password"
                                name="customer[password]"
                                id="CreatePassword"
                                class="required {% if form.errors contains 'password' %}input-error{% endif %}"
                                placeholder="{{ 'customer.register.password' | t }}"
                                spellcheck="false"
                                autocomplete="off"
                                autocapitalize="off" >
                        </div>
                    </div>
                </div>
                {% comment %} <div class="fieldset dob">
                    <div class="hide" aria-hidden="true">
                        <input type="text" id="Dob" name="customer[note][DOB]" tabindex="-1" value="" disabled="disabled">
                    </div>
                    <div class="field">
                        <label class="fieldset-label" for="dob">{{ 'customer.register.dob' | t }}</label>
                    </div>
                    <div class="field col">
                        <div class="input-wrapper">
                            <input type="number"
                                name="customer[dob_month]"
                                id="DobMonth"
                                length="2"
                                placeholder="{{ 'customer.register.dob_month' | t }}"
                                value="" >
                        </div>
                    </div>
                    <div class="field col">
                        <div class="input-wrapper">
                            <input type="number"
                                name="customer[dob_day]"
                                id="DobDay"
                                length="2"
                                placeholder="{{ 'customer.register.dob_day' | t }}"
                                value="" >
                        </div>
                    </div>
                </div> {% endcomment %}
                <div class="fieldset newsletter">
                    <div class="field">
                        <div class="input-wrapper">
                            <input type="checkbox"
                                name="customer[accepts_marketing]"
                                id="AcceptMarketing"
                                value="1" >
                            <label for="AcceptMarketing">{{ 'customer.register.newsletter' | t }}</label>
                        </div>
                    </div>
                </div>
                
                {{ form.errors | default_errors }}
                
                <div class="actions">
                    <button type="submit" class="btn">{{ 'customer.register.submit' | t }}</button>
                    <a href="/account/login">{{ 'customer.register.has_account' | t }}</a>
                </div>
            {% endform %}
            </div>
        </div>
    </div>
</div>


{% schema %}
{
  "name": "Register Page",
  "class": "main-register"
}
{% endschema %}