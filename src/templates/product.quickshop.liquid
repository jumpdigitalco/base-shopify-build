{%- comment -%}
<!--
This is the default product quickshop layout 
-->
{%- endcomment -%}

{% assign all_tags = product.tags | downcase %}

{% comment %}
    Product Detail Layout, take options 'quickshop'
{% endcomment %}
{%- assign pdp_layout = 'quickshop' -%}
{%- assign current_variant = product.selected_or_first_available_variant -%}
{%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}

<div class="product-quickshop" itemscope itemtype="http://schema.org/Product">
    <div class="product-detail-container {% if product.type == "Gift Card" %}gift-card{% endif %}" data-layout="{{ pdp_layout }}">

        {%- render 'product-media', product: product, current_variant: current_variant, featured_image: featured_image, layout: pdp_layout -%}
        
        {%- render 'product-core', product: product, current_variant: current_variant, featured_image: featured_image, layout: pdp_layout -%}

    </div>
</div>